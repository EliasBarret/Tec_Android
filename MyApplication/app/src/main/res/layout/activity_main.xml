<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="fill_parent"
    android:layout_height="fill_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="globalsoft.com.myapplication.MainActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SAVE"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/btSave"
        android:layout_alignParentStart="true"
        android:onClick="Tela2" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nome"
        android:id="@+id/txMostrarNome"
        android:layout_above="@+id/etNome"
        android:layout_alignEnd="@+id/textView7" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CPF"
        android:id="@+id/textView2"
        android:layout_above="@+id/etCpf"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="RG"
        android:id="@+id/textView3"
        android:layout_above="@+id/etRG"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="EndereÃ§o"
        android:id="@+id/textView4"
        android:layout_above="@+id/etEnder"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="120px"
        android:layout_height="wrap_content"
        android:text="Idade"
        android:id="@+id/tvIdade"
        android:layout_above="@+id/edtDia"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Login"
        android:id="@+id/textView6"
        android:layout_above="@+id/etLogin"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Senha"
        android:id="@+id/textView7"
        android:layout_above="@+id/etSenha"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/etSenha"
        android:layout_above="@+id/btSave"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/etLogin"
        android:layout_marginBottom="22dp"
        android:layout_above="@+id/textView7"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/edtDia"
        android:layout_above="@+id/textView4"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/textView6" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/etEnder"
        android:layout_above="@+id/textView6"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="21dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/etRG"
        android:layout_above="@+id/tvIdade"
        android:layout_alignEnd="@+id/edtAno"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/etCpf"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/textView3" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/etNome"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/textView2" />

    <EditText
        android:layout_width="500px"
        android:layout_height="wrap_content"
        android:id="@+id/EdtMes"
        android:layout_above="@+id/textView4"
        android:layout_toEndOf="@+id/txMostrarNome" />

    <EditText
        android:layout_width="130px"
        android:layout_height="wrap_content"
        android:id="@+id/edtAno"
        android:layout_alignTop="@+id/EdtMes"
        android:layout_toEndOf="@+id/EdtMes" />

</RelativeLayout>
