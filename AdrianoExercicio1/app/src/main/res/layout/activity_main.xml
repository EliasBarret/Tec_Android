<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:id="@+id/Exercicio">

    <TextView android:text="Nome" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textViewNomeOk" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/nomeCampo"
        android:layout_below="@+id/textViewNomeOk"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CPF"
        android:id="@+id/textViewCpf"
        android:layout_below="@+id/nomeCampo"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editTextCpf"
        android:layout_below="@+id/textViewCpf"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/nomeCampo"
        android:layout_alignEnd="@+id/nomeCampo" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="EndereÃ§o"
        android:id="@+id/textViewEndereco"
        android:layout_below="@+id/editTextCpf"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editTextEndereco"
        android:layout_below="@+id/textViewEndereco"
        android:layout_alignRight="@+id/editTextCpf"
        android:layout_alignEnd="@+id/editTextCpf"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Data de Nascimento"
        android:id="@+id/textViewNascimento"
        android:layout_below="@+id/editTextEndereco"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editTextNascimento"
        android:layout_below="@+id/textViewNascimento"
        android:layout_alignRight="@+id/editTextEndereco"
        android:layout_alignEnd="@+id/editTextEndereco"
        android:layout_alignStart="@+id/textViewSenha" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="   Login"
        android:id="@+id/textViewLogin"
        android:layout_below="@+id/editTextNascimento"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editTextLogin"
        android:layout_below="@+id/textViewLogin"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/textViewNascimento"
        android:layout_alignEnd="@+id/textViewNascimento" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Senha"
        android:id="@+id/textViewSenha"
        android:layout_above="@+id/editTextLogin"
        android:layout_toRightOf="@+id/editTextLogin"
        android:layout_toEndOf="@+id/editTextLogin"
        android:layout_marginLeft="60dp"
        android:layout_marginStart="60dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editTextSenha"
        android:layout_below="@+id/textViewSenha"
        android:layout_alignRight="@+id/editTextNascimento"
        android:layout_alignEnd="@+id/editTextNascimento"
        android:layout_alignLeft="@+id/textViewSenha"
        android:layout_alignStart="@+id/textViewSenha" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="OK"
        android:id="@+id/buttonConfirma"
        android:onClick="irParaSegundaActivity"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true" />



</RelativeLayout>
